extends layout

block content
  h1= title
  
  ul
  each author in author_list
    li 
      a(href=author.url) #{author.name} 
        if author.date_of_birth_format&&author.date_of_death_format
         | (#{author.date_of_birth_format} ~ #{author.date_of_death_format})
        
  else
    li There are no authors.